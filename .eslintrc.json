{
  "extends": "standard",
  "rules": {
    "semi": ["error", "always"],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "Babel": true,
    "jsx": true,
    "mDOM": true
  },
  "overrides": [
    {
      "files": ["src/libs/jsx.js"],
      "rules": {
        "no-eval": "off"
      }
    }
  ]
}